<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital name"
            android:textSize="20dp"
            android:id="@+id/hospitalnameVieww"/>
        <TextView
            android:background="#E1DCDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor's Name"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/hospitalnameVieww"
            android:id="@+id/doctornameVieww"/>
        <TextView
            android:background="#E1DCDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requested By"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/doctornameVieww"
            android:id="@+id/RequetedBy"/>




        <TextView
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status : "
            android:textSize="20dp"
            android:textColor="@color/acbar"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/RequetedBy"
            android:id="@+id/faoo"
            android:layout_marginLeft="100dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status : "
            android:textSize="20dp"
            android:textColor="@color/acbar"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/RequetedBy"
            android:layout_toEndOf="@+id/faoo"
            android:id="@+id/Statuss"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>