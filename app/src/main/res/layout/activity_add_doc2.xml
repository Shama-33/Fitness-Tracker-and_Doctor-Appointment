<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#E4E9F6"
    tools:context=".addDoc2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/docname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="Doctor Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="#8A8A8C"
            android:layout_below="@+id/docphoto"/>

        <EditText
            android:id="@+id/doctime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="Time"
            android:padding="10dp"
            android:textColorHint="#8A8A8C"
            android:layout_below="@+id/docname"/>

        <ImageView
            android:id="@+id/docphoto"
            android:layout_width="82dp"
            android:layout_height="85dp"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/doctor"
            />


        <EditText
            android:id="@+id/speciality"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:hint="Specializes in"
            android:drawableLeft="@drawable/ic_baseline_arrow_drop_down_24"
            android:inputType="textImeMultiLine"
            android:textColorHint="#8A8A8C"
            android:layout_below="@+id/doctime"/>

        <EditText
            android:id="@+id/prof"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="degrees"
            android:inputType="textImeMultiLine"
            android:padding="10dp"
            android:textColorHint="#8A8A8C"
            android:layout_below="@+id/speciality"/>

        <Button
            android:id="@+id/addinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prof"
            android:layout_marginStart="168dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Add" />


    </RelativeLayout>



</LinearLayout>